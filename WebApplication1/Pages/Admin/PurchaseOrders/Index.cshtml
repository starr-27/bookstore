@page
@model WebApplication1.Pages.Admin.PurchaseOrders.IndexModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "AdminOnly")]
@{
    ViewData["Title"] = "采购单管理";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">采购单管理</h1>
    <a class="btn btn-primary" asp-page="/Admin/PurchaseOrders/CreateFromOutOfStock">由缺书记录生成</a>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>单号</th>
                <th>供应商</th>
                <th>状态</th>
                <th>条目数</th>
                <th>创建时间</th>
                <th>到货时间</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Rows)
            {
                <tr>
                    <td class="text-muted">@r.PurchaseOrderId</td>
                    <td>@r.SupplierName</td>
                    <td><span class="badge text-bg-secondary">@r.StatusText</span></td>
                    <td>@r.ItemCount</td>
                    <td class="text-muted">@r.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="text-muted">@(r.ReceivedAt.HasValue ? r.ReceivedAt.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm") : "-")</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-page="/Admin/PurchaseOrders/Details" asp-route-id="@r.PurchaseOrderId">查看</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
