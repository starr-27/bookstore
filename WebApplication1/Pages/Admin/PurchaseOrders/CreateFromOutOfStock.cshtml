@page
@model WebApplication1.Pages.Admin.PurchaseOrders.CreateFromOutOfStockModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "AdminOnly")]
@{
    ViewData["Title"] = "由缺书记录生成采购单";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h4 mb-0">由缺书记录生成采购单</h1>
        <div class="text-muted small">选择供应商与缺书记录，生成面向供应商的采购单。</div>
    </div>
    <a class="btn btn-link" asp-page="/Admin/PurchaseOrders/Index">返回采购单列表</a>
</div>

<form method="post" class="row g-3">
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">供应商</label>
                    <select class="form-select" asp-for="Input.SupplierId">
                        <option value="">请选择</option>
                        @foreach (var s in Model.SupplierOptions)
                        {
                            <option value="@s.SupplierId">@s.SupplierName</option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="Input.SupplierId"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">默认采购单价（所有条目）</label>
                    <input class="form-control" asp-for="Input.DefaultUnitCost" />
                    <span class="text-danger" asp-validation-for="Input.DefaultUnitCost"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="Input.MarkRequestsAsOrdered" />
                    <label class="form-check-label" asp-for="Input.MarkRequestsAsOrdered">生成后将缺书记录标记为 Ordered</label>
                </div>

                <button class="btn btn-primary" type="submit">生成采购单</button>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="h6">缺书记录（仅显示 Submitted/Processing）</h2>

                <div class="table-responsive">
                    <table class="table table-sm table-hover align-middle">
                        <thead>
                            <tr>
                                <th></th>
                                <th>时间</th>
                                <th>客户</th>
                                <th>书名</th>
                                <th class="text-end">数量</th>
                                <th>状态</th>
                                <th class="text-muted">BookId</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in Model.Requests)
                            {
                                <tr>
                                    <td>
                                        <input class="form-check-input" type="checkbox" name="Input.SelectedRequestIds" value="@r.OutOfStockRequestId" />
                                    </td>
                                    <td class="text-muted">@r.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@r.CustomerEmail</td>
                                    <td>@r.BookTitle</td>
                                    <td class="text-end">@r.RequestedQty</td>
                                    <td><span class="badge text-bg-secondary">@r.StatusText</span></td>
                                    <td class="text-muted">@(r.BookId?.ToString() ?? "-")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
