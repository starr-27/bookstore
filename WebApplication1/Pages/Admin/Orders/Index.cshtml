@page
@model WebApplication1.Pages.Admin.Orders.IndexModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "AdminOnly")]
@{
    ViewData["Title"] = "订单管理";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">订单管理</h1>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <select class="form-select" name="status">
            <option value="">全部状态</option>
            @foreach (var s in Model.StatusOptions)
            {
                <option value="@s.Value" selected="@(s.Value == Model.Status ? "selected" : null)">@s.Text</option>
            }
        </select>
    </div>
    <div class="col-md-8 d-grid d-md-flex justify-content-md-end">
        <button class="btn btn-outline-primary" type="submit">筛选</button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>订单号</th>
                <th>顾客</th>
                <th>状态</th>
                <th class="text-end">金额</th>
                <th>创建时间</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model.Orders)
            {
                var status = (o.StatusText ?? string.Empty).ToLowerInvariant();
                var badgeClass = status.Contains("paid") || status.Contains("completed") || status.Contains("finish") || status.Contains("done")
                    ? "text-bg-success"
                    : status.Contains("cancel") || status.Contains("refund")
                        ? "text-bg-danger"
                        : status.Contains("ship") || status.Contains("deliver")
                            ? "text-bg-info"
                            : "text-bg-warning";
                <tr>
                    <td class="text-muted">#@o.OrderId</td>
                    <td>@(o.CustomerEmail ?? o.CustomerId)</td>
                    <td><span class="badge @badgeClass">@o.StatusText</span></td>
                    <td class="text-end"><span class="currency">￥</span> @o.TotalAmount.ToString("0.00")</td>
                    <td>@o.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-page="/Admin/Orders/Details" asp-route-id="@o.OrderId">处理</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
