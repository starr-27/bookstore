@page
@model WebApplication1.Pages.Admin.Suppliers.IndexModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "AdminOnly")]
@{
    ViewData["Title"] = "供应商管理";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">供应商管理</h1>
    <a class="btn btn-primary" asp-page="/Admin/Suppliers/Create">新增供应商</a>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th style="min-width: 160px">名称</th>
                <th style="min-width: 120px">联系人</th>
                <th style="min-width: 140px">电话</th>
                <th style="min-width: 220px">邮箱</th>
                <th class="text-end" style="min-width: 110px">书目数</th>
                <th class="text-end" style="min-width: 90px">状态</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model.Suppliers)
            {
                <tr>
                    <td class="text-truncate" style="max-width: 220px">@s.SupplierName</td>
                    <td class="text-truncate" style="max-width: 180px">@(s.ContactName ?? "-")</td>
                    <td class="text-truncate" style="max-width: 180px">@(s.Phone ?? "-")</td>
                    <td class="text-truncate" style="max-width: 320px">@(s.Email ?? "-")</td>
                    <td class="text-end">@s.BookCount</td>
                    <td class="text-end">
                        @if (s.IsActive)
                        {
                            <span class="badge text-bg-success">启用</span>
                        }
                        else
                        {
                            <span class="badge text-bg-secondary">停用</span>
                        }
                    </td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-page="/Admin/Suppliers/Edit" asp-route-id="@s.SupplierId">编辑</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
