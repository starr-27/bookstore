@page "{id:long}"
@model WebApplication1.Pages.Orders.DetailsModel
@inject WebApplication1.Services.IAssetManifest Assets
@inject WebApplication1.Services.IVisualSelector Visuals
@{
    ViewData["Title"] = "订单详情";
}

@if (Model.Order is null)
{
    <div class="alert alert-warning">未找到订单</div>
}
else
{
    <section class="hero mb-4">
        <div class="hero-bg" aria-hidden="true"></div>
        <div class="hero-inner">
            <div class="d-flex justify-content-between align-items-start gap-3 flex-wrap">
                <div>
                    <div class="hero-kicker">我的订单</div>
                    <h1 class="hero-title mb-1">订单 #@Model.Order.OrderId</h1>
                    <div class="hero-subtitle">状态：<span class="badge text-bg-secondary">@Model.Order.StatusText</span></div>
                </div>
                <a class="btn btn-outline-primary" asp-page="/Orders/My">返回订单列表</a>
            </div>
        </div>
    </section>

    <div class="row g-3 mb-3">
        <div class="col-lg-8">
            <div class="card shadow-sm app-card">
                <div class="card-body">
                    <div class="details-grid">
                        <div class="details-item">
                            <div class="details-label">收货信息</div>
                            <div class="details-value">@Model.Order.ReceiverName</div>
                            <div class="text-muted small">@Model.Order.ReceiverPhone</div>
                            <div class="text-muted small">@Model.Order.ReceiverAddr</div>
                        </div>
                        <div class="details-item">
                            <div class="details-label">时间</div>
                            <div class="details-value">下单：@Model.Order.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</div>
                            <div class="text-muted small">支付：@(Model.Order.PaidAt.HasValue ? Model.Order.PaidAt.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm") : "-")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm app-card dot-card">
                <div class="card-body">
                    <div class="text-muted small">合计金额</div>
                    <div class="h3 mb-1"><span class="currency">￥</span> @Model.Order.TotalAmount.ToString("0.00")</div>
                    <div class="text-muted small">明细见下方表格</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm app-card">
        <div class="card-header bg-transparent">订单明细</div>
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th>书籍</th>
                        <th class="text-end">单价</th>
                        <th class="text-end">数量</th>
                        <th class="text-end">小计</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model.Order.Items)
                    {
                        var fallback = $"/images/book-cover-{(((long)i.Title.GetHashCode() & 0x7fffffff) % 3 + 1)}.svg";
                        var cover = Visuals.PickStable(Assets.GetFlowerCovers(), i.Title) ?? fallback;
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <img src="@cover" alt="@i.Title" style="width:44px;height:58px;border-radius:10px;border:1px solid rgba(31,59,44,0.12);box-shadow:0 8px 16px rgba(31,59,44,0.08);" />
                                    <div class="fw-semibold">@i.Title</div>
                                </div>
                            </td>
                            <td class="text-end"><span class="currency">￥</span> @i.UnitPrice.ToString("0.00")</td>
                            <td class="text-end">@i.Qty</td>
                            <td class="text-end"><span class="currency">￥</span> @i.LineAmount.ToString("0.00")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">合计</th>
                        <th class="text-end"><span class="currency">￥</span> @Model.Order.TotalAmount.ToString("0.00")</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
}
