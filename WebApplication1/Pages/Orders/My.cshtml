@page
@model WebApplication1.Pages.Orders.MyModel
@{
    ViewData["Title"] = "我的订单";
}

<h1 class="h4 mb-3">我的订单</h1>

@if (Model.Orders.Count == 0)
{
    <div class="alert alert-light border">暂无订单</div>
}
else
{
    <div class="list-group">
        @foreach (var o in Model.Orders)
        {
            <a class="list-group-item list-group-item-action" asp-page="/Orders/Details" asp-route-id="@o.OrderId">
                <div class="d-flex w-100 justify-content-between">
                    <h2 class="h6 mb-1">订单 #@o.OrderId</h2>
                    <small class="text-muted">@o.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</small>
                </div>
                <div class="small text-muted mb-1">状态：@o.StatusText</div>
                <div class="d-flex justify-content-between">
                    <div class="small">@o.Summary</div>
                    <div class="fw-semibold">? @o.TotalAmount.ToString("0.00")</div>
                </div>
            </a>
        }
    </div>
}
