@page
@model WebApplication1.Pages.Orders.MyModel
@inject WebApplication1.Services.IAssetManifest Assets
@inject WebApplication1.Services.IVisualSelector Visuals
@{
    ViewData["Title"] = "我的订单";
}

<section class="hero mb-4">
    <div class="hero-bg" aria-hidden="true"></div>
    <div class="hero-inner">
        <div class="d-flex justify-content-between align-items-start gap-3 flex-wrap">
            <div>
                <div class="hero-kicker">订单中心</div>
                <h1 class="hero-title mb-1">我的订单</h1>
                <div class="hero-subtitle">查看订单状态、金额与明细，支持快速进入详情页。</div>
            </div>
            <a class="btn btn-outline-primary" asp-page="/Index">继续选购</a>
        </div>
    </div>
</section>

@if (Model.Orders.Count == 0)
{
    <div class="alert alert-light border">暂无订单</div>
}
else
{
    <div class="list-group">
        @foreach (var o in Model.Orders)
        {
            <a class="list-group-item list-group-item-action" asp-page="/Orders/Details" asp-route-id="@o.OrderId">
                <div class="d-flex w-100 justify-content-between">
                    <h2 class="h6 mb-1">订单 #@o.OrderId</h2>
                    <small class="text-muted">@o.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</small>
                </div>
                <div class="small text-muted mb-1">状态：@o.StatusText</div>
                <div class="d-flex justify-content-between">
                    <div class="small">@o.Summary</div>
                    <div class="fw-semibold">? @o.TotalAmount.ToString("0.00")</div>
                </div>
            </a>
        }
    </div>
}
