@page "{id:long}"
@model WebApplication1.Pages.Books.DetailsModel
@inject WebApplication1.Services.IAssetManifest Assets
@inject WebApplication1.Services.IVisualSelector Visuals
@{
    ViewData["Title"] = "书籍详情";
}

@if (Model.Book is null)
{
    <div class="alert alert-warning">未找到该书籍</div>
}
else
{
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm app-card">
                <div class="card-body">
                    <div class="row g-3 align-items-start">
                        <div class="col-md-4">
                            @{
                                var fallback = $"/images/book-cover-{((Model.Book.BookId % 3) + 1)}.svg";
                                var cover = Visuals.PickStableByLong(Assets.GetFlowerCovers(), Model.Book.BookId) ?? fallback;
                            }
                            <div class="book-cover p-0">
                                <img src="@cover" alt="@Model.Book.Title" />
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h1 class="h4 mb-1">@Model.Book.Title</h1>
                            <div class="text-muted mb-3">@Model.Book.BookNo</div>

                            <div class="details-grid">
                                <div class="details-item">
                                    <div class="details-label">作者</div>
                                    <div class="details-value">@Model.Book.AuthorsText</div>
                                </div>
                                <div class="details-item">
                                    <div class="details-label">出版社</div>
                                    <div class="details-value">@(Model.Book.PublisherName ?? "-")</div>
                                </div>
                                <div class="details-item">
                                    <div class="details-label">关键字</div>
                                    <div class="details-value">@Model.Book.KeywordsText</div>
                                </div>
                                <div class="details-item">
                                    <div class="details-label">供应商</div>
                                    <div class="details-value">@(Model.Book.SupplierName ?? "-")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm app-card dot-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-end mb-2">
                        <div>
                            <div class="text-muted small">当前价格</div>
                            <div class="h4 mb-0">￥ @Model.Book.Price.ToString("0.00")</div>
                        </div>
                        <div class="text-muted">库存：@Model.Book.StockQty</div>
                    </div>

                    @if (!User.Identity?.IsAuthenticated ?? true)
                    {
                        <div class="alert alert-light border small">登录后才能购买</div>
                        <a class="btn btn-primary w-100" asp-page="/Account/Login">登录</a>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="Buy">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="mb-2">
                                <label class="form-label">数量</label>
                                <input class="form-control" type="number" min="1" max="999" asp-for="Qty" />
                                <span class="text-danger" asp-validation-for="Qty"></span>
                            </div>

                            <div class="mb-2">
                                <label class="form-label">收货人</label>
                                <input class="form-control" asp-for="ReceiverName" />
                                <span class="text-danger" asp-validation-for="ReceiverName"></span>
                            </div>

                            <div class="mb-2">
                                <label class="form-label">电话</label>
                                <input class="form-control" asp-for="ReceiverPhone" />
                                <span class="text-danger" asp-validation-for="ReceiverPhone"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">地址</label>
                                <textarea class="form-control" rows="2" asp-for="ReceiverAddr"></textarea>
                                <span class="text-danger" asp-validation-for="ReceiverAddr"></span>
                            </div>

                            <button class="btn btn-success w-100" type="submit" @(Model.Book.StockQty == 0 ? "disabled" : null)>
                                立即购买
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
